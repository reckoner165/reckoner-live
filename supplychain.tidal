    degradeB=y 0.7 $ sound "~ ~ [~ kr:1?] ~" |+| gain 0.7 |+| nudge (rand * 0.02)
]

  d2 $ slow 2 $ sound "kr:5 kr:6 kr:6 kr:6" # gain 1.2

hush



