

setcps(112/60/2)
just_hihats = d1 $ silence

main = "~ kr kr:1 [kr? kr:1]"
kick = "kr kr kr:1 [kr? kr:1]"
eighth =  "kr kr  ~ kr:1"

testfun = do
  d1 $ every 16 (const $ sound eighth) $ every 4 (const $ sound kick) $ sound "~ kr kr:1 [kr? kr:1]"
  d2 $ slow 2 $ sound "kr:5 kr:6 kr:6 kr:6" # gain 1.2 |+| pan 0.3

just_hihats

testf
